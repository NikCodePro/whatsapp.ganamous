<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style> body { font-family: 'Inter', sans-serif; } </style>
</head>
<body class="bg-gray-50">

    <nav class="bg-white shadow-md">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between h-16">
                <div class="flex-shrink-0 flex items-center">
                    <h1 class="text-2xl font-bold text-indigo-600">WhatsApp Manager</h1>
                </div>
                <div class="flex items-center">
                    <a href="/logout" class="bg-red-500 text-white font-semibold py-2 px-4 rounded-md hover:bg-red-600 transition duration-300">Logout</a>
                </div>
            </div>
        </div>
    </nav>

    <main class="max-w-7xl mx-auto py-10 px-4 sm:px-6 lg:px-8">
        <!-- Add New Number Form -->
        <div class="bg-white p-6 rounded-lg shadow-md mb-8">
            <h2 class="text-2xl font-bold text-gray-800 mb-4">Add a New Number</h2>
            <form action="/add-number" method="POST" class="grid grid-cols-1 md:grid-cols-4 gap-4 items-end">
                <div>
                    <label for="countryCode" class="block text-sm font-medium text-gray-700">Country Code</label>
                    <input type="text" name="countryCode" placeholder="e.g., 91" required class="mt-1 w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500">
                </div>
                <div>
                    <label for="phoneNumber" class="block text-sm font-medium text-gray-700">Phone Number</label>
                    <input type="text" name="phoneNumber" placeholder="e.g., 9876543210" required class="mt-1 w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500">
                </div>
                <div class="md:col-span-2">
                    <label for="customMessage" class="block text-sm font-medium text-gray-700">Custom Message</label>
                    <input type="text" name="customMessage" placeholder="Hello! I have a question." class="mt-1 w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500">
                </div>
                <button type="submit" class="md:col-start-4 bg-indigo-600 text-white font-semibold py-2 px-4 rounded-md hover:bg-indigo-700 transition duration-300">Add Number</button>
            </form>
        </div>

        <!-- Numbers Table -->
        <div class="bg-white rounded-lg shadow-md overflow-hidden">
             <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-50">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Country Code</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Phone Number</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Custom Message</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        <% if (numbers.length > 0) { %>
                            <% numbers.forEach(num => { %>
                                <tr>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-800">+<%= num.countryCode %></td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-800"><%= num.phoneNumber %></td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500 max-w-xs truncate"><%= num.customMessage %></td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <form action="/toggle-status/<%= num._id %>" method="POST" class="inline">
                                            <button type="submit" class="px-3 py-1 text-xs font-medium rounded-full <%= num.status === 'active' ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
                                                <%= num.status %>
                                            </button>
                                        </form>
                                    </td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                                        <form action="/delete-number/<%= num._id %>" method="POST" class="inline" onsubmit="return confirm('Are you sure you want to delete this number?');">
                                            <button type="submit" class="text-red-600 hover:text-red-900">Delete</button>
                                        </form>
                                    </td>
                                </tr>
                            <% }) %>
                        <% } else { %>
                            <tr>
                                <td colspan="5" class="px-6 py-4 text-center text-gray-500">No numbers have been saved yet.</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Redirect Link Section -->
        <div class="bg-white p-6 rounded-lg shadow-md mt-8">
            <h2 class="text-2xl font-bold text-gray-800 mb-4">Your Rotating Redirect Link</h2>
            <p class="text-gray-600 mb-4">Share this link. Each time it's visited, it will redirect to the next active WhatsApp number.</p>
            <div class="flex items-center space-x-4 bg-gray-100 p-4 rounded-md">
                <input id="redirectLink" type="text" value="<%= redirectURL %>" readonly class="w-full bg-gray-100 text-gray-700 focus:outline-none">
                <button onclick="copyLink()" class="bg-gray-600 text-white font-semibold py-2 px-4 rounded-md hover:bg-gray-700 transition duration-300">Copy</button>
            </div>
            <p id="copy-success" class="text-green-600 text-sm mt-2 invisible">Link copied to clipboard!</p>
        </div>
    </main>

    <script>
        function copyLink() {
            const linkInput = document.getElementById('redirectLink');
            linkInput.select();
            linkInput.setSelectionRange(0, 99999); // For mobile devices
            document.execCommand('copy');

            const successMessage = document.getElementById('copy-success');
            successMessage.classList.remove('invisible');
            setTimeout(() => {
                successMessage.classList.add('invisible');
            }, 2000);
        }
    </script>
</body>
</html>
